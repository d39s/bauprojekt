        justify-content: space-between;
    }
    .footer-legals{
        display: flex;
        align-items: center;
        flex-wrap: nowrap;
    }
    .footer-legals > a:nth-of-type(n+2){
        margin-left: 10px;
        padding-left: 10px;
        border-left: 1px solid var(--gray);
    }

    @media (min-width: 768px) AND (max-width: 1000px){
        #footer-infos{
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
        }
    }

    @media (max-width: 767px){
        #footer-infos{
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
        }
        footer-block{
            font-size: 15px;
        }
        .footer-headline{
