<style>
    footer {
        padding: 50px 0 0;
    }
    footer a{
        color: var(--gray);
        text-decoration: none;
    }
    footer a:hover{
        color: var(--yellow);
        text-decoration: underline;
    }

    /* main footer */
    #main-footer{
        padding: 25px 0;
    }
    #main-footer > .container{
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 45px;
    }
    #footer-infos{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 30px;
    }
    .footer-headline{
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 20px;
    }
    /* sub footer*/
    #sub-footer{
        padding: 25px 0 45px;
        border-top: 1px solid #eee;
    }
    #sub-footer > .container{
        display: flex;
        justify-content: space-between;
    }
    .footer-legals{
        display: flex;
        align-items: center;
        flex-wrap: nowrap;
    }
    .footer-legals > a:nth-of-type(n+2){
        margin-left: 10px;
        padding-left: 10px;
        border-left: 1px solid var(--gray);
    }
</style>