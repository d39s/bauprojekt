---
import '../styles/global.css';
const currentPath = new URL(Astro.request.url).pathname;
---
<header>
    <div class="container nav">
        <div>
            <img alt="Bauprojekt GmbHby FMC-KÃ¶hler" src="/img/logo.svg" height="70">
        </div>
        
        <div class="nav-links">
            <a class={currentPath === "/" ? "active" : ""} href="/">Startseite</a>
            <a class={currentPath === "/referenzen" ? "active" : ""} href="/referenzen">Referenzen</a>
            <a class={currentPath === "/team" ? "active" : ""} href="/team">Team</a>
            <a class={currentPath === "/angebot" ? "active" : ""} href="/angebot">Angebot</a>
            <a class={currentPath === "/karriere" ? "active" : ""} href="/karriere">Karriere</a>
            <a class={currentPath === "/kontakt" ? "active" : ""} href="/kontakt">Kontakt</a>
        </div>
    </div>
</header>
<svg width="0" height="30">
    <defs>
      <clipPath id="myCurve" clipPathUnits="objectBoundingBox">
        <path d="M 0,1
                L 0,0
                L 1,0
                L 1,1
                C .65 .8, .35 .8, 0 1
                Z" />
      </clipPath>
    </defs>
  </svg>

<style>
    header {
        position: fixed;
        top: 0;
        width: 100%;
        padding: 20px 0;
        background: #fff;
        z-index: 150;
        /*clip-path: url(#myCurve);*/
    }

    img {
        margin-right: auto;
        max-height: 100%;
    }
    .nav{
        display: flex;
        gap: 30px;
        justify-content: space-between;
        align-items: center;
    }
    .nav-links{
        display: flex;
        gap: 50px;

    }

    a {
        text-align: center;
        text-decoration: none;
        color: #2f2f34;
    }

    a.active {
        color: black;
    }
</style>