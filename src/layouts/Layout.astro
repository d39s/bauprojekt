---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    topBg?: string;
    topFilter?: string;
    stripeBg?: string;
    bottomBg?: string;
}

const {topBg = "white", topFilter = "", stripeBg = "var(--yellow)", bottomBg = "var(--gray)"} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Bauprojekt"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Bauprojekt</title>
</head>
<body>
<main>
    <Header/>
    <div id="page-head">
        <div id="head-bg"></div>
        <div id="head-slot">
            <slot name="head"/>
        </div>
    </div>
    <div id="content">
        <slot/>
        <Footer/>
    </div>
</main>
</body>
</html>
<style is:global>
    :root {
        --gray: #323237;
        --yellow: #FCBB40;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        font-family: 'Poppins', sans-serif;
        font-weight: 300;
        color: #2f2f34;
    }

    img {
        border-radius: 20px;
    }

    h1 {
        margin-bottom: 40px;
    }

    h2 {
        color: white;
        font-size: 40px;
    }

    @font-face {
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 300;
        src: url('/fonts/Poppins-Light.ttf') format('ttf');
    }
    @font-face {
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 600;
        src: url('/fonts/Poppins-SemiBold.ttf') format('ttf');
    }
</style>
<style define:vars={{topBg, topFilter, stripeBg, bottomBg}}>
    main {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        align-items: center;
        min-height: 100vh;
    }

    #page-head {
        position: relative;
        width: 100%;
        padding: 50px 0 100px 0;
    }

    #head-slot {
        margin: 0 15%;
    }

    #head-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--topBg);
        background-position: center;
        filter: var(--topFilter);
        z-index: -100;
    }

    #content {
        width: 100%;
        position: relative;
        background: linear-gradient(to bottom, transparent 30px, var(--bottomBg) 0);
        padding-top: 120px;
        flex-grow: 1;
    }

    #page-head:after {
        position: absolute;
        content: "";
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        height: 60px;
        width: 100%;
        background: var(--stripeBg);
        bottom: -30px;
        z-index: 10;
    }

    #content:before {
        position: absolute;
        content: "";
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        height: 60px;
        width: 100%;
        background: var(--bottomBg);
        z-index: 20;
        top: 0;
    }
</style>