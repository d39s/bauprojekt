---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Bauprojekt"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Bauprojekt</title>
</head>
<body>
<main>
    <Header/>
    <div id="page-head">
        <slot name="head"/>
    </div>
    <div id="content">
        <slot/>
        <Footer/>
    </div>
</main>
</body>
</html>
<style is:global>
    :root {
        --gray: #323237;
        --yellow: #FCBB40;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    img {
        border-radius: 20px;
    }

    h1 {
        margin-bottom: 40px;
    }

    h2 {
        color: white;
        font-size: 40px;
    }
</style>
<style>
    main {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        align-items: center;
        min-height: 100vh;
    }

    #page-head {
        position: relative;
        width: 100%;
    }

    #content {
        width: 100%;
        position: relative;
        background: linear-gradient(to bottom, transparent 30px, var(--gray) 0);
        padding-top: 120px;
        flex-grow: 1;
    }

    #page-head:after {
        position: absolute;
        content: "";
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        height: 60px;
        width: 100%;
        background: var(--yellow);
        bottom: -60px;
        z-index: 10;
    }

    #content:before {
        position: absolute;
        content: "";
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        height: 60px;
        width: 100%;
        background: var(--gray);
        z-index: 20;
        top: 30px;
    }
</style>