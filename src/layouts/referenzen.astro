---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    topBg?: string;
    topFilter?: string;
    stripeBg?: string;
    bottomBg?: string;
}

---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Bauprojekt"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Bauprojekt</title>
</head>
<body>
    <Header/>
    <main>
        <div id="page-head">
            <div id="head-bg"></div>
            <div id="head-slot" class="container">
                <slot name="head"/>
            </div>
        </div>
        <div id="content">
            <slot/>
            
        </div>
    </main>
    <Footer/>
</body>
</html>

<style>

    #page-head {
        position: relative;
        width: 100%;
        padding: 30px 0;
    }

    #head-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--topBg);
        background-position: center;
        filter: var(--topFilter);
        z-index: -100;
    }

    #head-slot{
        padding-bottom: 50px;
    }

    #content {
        padding-top: 75px;
    }

    #page-head:after {
        position: absolute;
        content: "";
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        height: 60px;
        width: 100%;
        background: var(--stripeBg);
        bottom: -30px;
        z-index: 10;
    }

    #content:before {
        position: absolute;
        content: "";
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        height: 60px;
        width: 100%;
        background: var(--bottomBg);
        z-index: 20;
        top: 0;
    }
</style>