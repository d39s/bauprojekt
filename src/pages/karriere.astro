<style>
    h1{
        font-size: 72px;
        margin-bottom: 20px;
    }
    #head{
        margin-bottom: 60px;
    }
    h3{
        margin: 25px 0 12px;
    }

    li {
        list-style-position: inside;
    }
    p{
        font-size: 16px;
    }
    .benefits-grid{
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 60px;
    }
    .benefits-grid > .item{
        display: grid;
        grid-template-columns: 1fr;
        padding: 20px;
        gap: 12px;
        text-align: center;
        justify-items: center;
        border: 1px solid var(--yellow);
        border-radius: 5px;
    }
    .benefits-grid > .item > .icon{
        width: 40px;
        height: 40px;
        filter: invert(77%) sepia(28%) saturate(1090%) hue-rotate(346deg) brightness(101%) contrast(98%);
    }
    .spacer{
        margin-bottom: 60px;
    }
    form {
        background: white;
        border-radius: 20px;
        max-width: 700px;
        margin: 35px auto 90px;
        padding: 35px;
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 15px;
        border: 2px solid var(--gray);
    }
    form h2{
        font-size: 50px;
        margin: 5px 0 25px;
    }
    input, textarea {
        padding: 14px 20px;
        border-radius: 20px;
        border: none;
        outline: none;
        background: #eee;
        resize: none;
    }
    #drag-drop-field{
        font-size: 18px;
        background-color: var(--gray);
        position: relative;
        padding: 50px 20px;
        color: #fff;
        outline: 2px dashed var(--yellow);
        outline-offset: -10px;
        -webkit-transition: outline-offset .15s ease-in-out, background-color .15s linear;
        transition: outline-offset .15s ease-in-out, background-color .15s linear;
    }
    #drag-drop-field .box__button{
        font-weight: 700;
        color: #e5edf1;
        background-color: #39bfd3;
        display: none;
        padding: 8px 16px;
        margin: 40px auto 0;
    }
    #drag-drop-field .box__file{
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
