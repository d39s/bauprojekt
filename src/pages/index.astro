---

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import HomeServices from '../components/home/services.astro';
import HomePlanning from '../components/home/planning.astro';
import HomeRequirements from '../components/home/requirements.astro';
import HomeReferences from '../components/home/references.astro';
import HomeCareer from '../components/home/career.astro';
import HomeBroschuere from '../components/home/broschuere.astro';
//const {topBg = "white", topFilter = "", stripeBg = "var(--yellow)", bottomBg = "var(--gray)"} = Astro.props;

import { getImage } from "astro:assets";
import teaser from "../assets/teaser_home.jpg";

const optimizedTeaser = await getImage({src: teaser, format: 'webp'});
---

<!doctype html>
<html lang="de">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Bauprojekt"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.png"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Bauprojekt</title>
</head>
<body>
    <Header/>
    <main>
        <div id="teaser" class="teaser" style={`background-image: url(${optimizedTeaser.src});`}>
            <div id="layer"></div>
            <div class="container">
                <h1>
                    Stets das richtige Maß am Bau<span>.</span>
                </h1>
            </div>
        </div>
        <div class="card-section light">
            <!-- Unsere Leistungen. -->
            <HomeServices />
        </div>
        <div class="card-section dark">
            <!-- Idee. Planung. Umsetzung. -->
            <HomePlanning />
        </div>
        <div class="card-section light">
            <!-- Ihre Wünsche. -->
            <HomeRequirements />
        </div>
        <div class="card-section dark">
            <!-- Referenzen -->
            <HomeReferences />
        </div>
        <div class="card-section light">
            <!-- Unsere Broschüre. -->
            <HomeBroschuere />
        </div>
        <div class="card-section dark">
            <!-- Stellenangebote -->
            <HomeCareer />
        </div>
    </main>
    <Footer/>
</body>
</html>

<style>
    #teaser{
        position: relative;
        background-size: cover;
    }
    h1{
        position: relative;
        max-width: 570px;
        line-height: 1.2;
    }
    #layer{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to left, transparent 34%, rgb(252 252 252 / 85%) 67%);
    }
    @media (min-width: 768px) AND (max-width: 1000px){
        .teaser{
            min-height: 700px;
        }
        h1{
            max-width: 350px;
            font-size: 50px;
        }
    }

    @media (max-width: 767px){
        .teaser{
            min-height: 500px;
        }
        h1{
            max-width: 250px;
            font-size: 32px;
        }
    }
</style>
